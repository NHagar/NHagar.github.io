---
import type { CollectionEntry } from "astro:content";
import { Icon } from "astro-icon/components";

interface Props {
    posts: CollectionEntry<"blog">[];
}

const { posts } = Astro.props;

const sortedPosts = posts.sort(
    (a, b) => b.data.date.getTime() - a.data.date.getTime(),
);

function formatDate(date: Date): string {
    return new Intl.DateTimeFormat("en-US", {
        month: "long",
        year: "numeric",
        day: "numeric",
    }).format(date);
}
---

<section aria-labelledby="blog-heading" class="animate-section">
    <div class="flex items-center justify-between mb-8">
        <h2 id="blog-heading" class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-primary-600 to-accent-purple bg-clip-text text-transparent">
            Blog & Newsletter
        </h2>
    </div>
    
    {sortedPosts && sortedPosts.length > 0 ? (
        <div class="space-y-6">
            {sortedPosts.map((post, index) => (
                <article 
                    class="group relative overflow-hidden rounded-2xl bg-white border border-gray-100 shadow-sm hover:shadow-lg transition-all duration-300 hover-lift"
                    style={`animation-delay: ${0.1 * index}s;`}
                >
                    <!-- Gradient overlay on hover -->
                    <div class="absolute inset-0 bg-gradient-to-r from-primary-50 to-accent-purple/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                        
                    <div class="relative p-6">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-text-primary mb-2 group-hover:text-primary-600 transition-colors duration-300">
                                    <a
                                        href={post.data.link}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="relative"
                                    >
                                        {post.data.title}
                                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-400 to-accent-purple transition-all duration-300"></span>
                                    </a>
                                </h3>
                                
                                <div class="flex items-center gap-2 text-sm text-text-secondary">
                                    <Icon name="mdi:calendar" class="w-4 h-4 text-primary-400" />
                                    <time datetime={post.data.date.toISOString()}>
                                        {formatDate(post.data.date)}
                                    </time>
                                    {post.data.publication && (
                                        <>
                                            <span class="text-primary-300">â€¢</span>
                                            <span class="font-medium text-primary-600">
                                                {post.data.publication}
                                            </span>
                                        </>
                                    )}
                                </div>
                            </div>
                            
                            <a
                                href={post.data.link}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="ml-4 p-2 rounded-full bg-primary-50 text-primary-600 opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-primary-100"
                                aria-label="Read post"
                            >
                                <Icon name="mdi:arrow-right" class="w-5 h-5" />
                            </a>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    ) : (
        <p class="text-text-secondary text-center py-8">
            No blog posts to display at the moment.
        </p>
    )}

    <div class="mt-10 flex flex-col sm:flex-row gap-4 items-center justify-center">
        <a
            href="https://generative-ai-newsroom.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center gap-2 px-6 py-3 rounded-full bg-gradient-to-r from-primary-500 to-accent-purple text-white font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5"
        >
            <span>Generative AI in the Newsroom</span>
            <Icon name="mdi:open-in-new" class="w-4 h-4 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-transform duration-300" />
        </a>
        <a
            href="https://attentionmarkets.substack.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center gap-2 px-6 py-3 rounded-full border-2 border-primary-400 text-primary-600 font-medium hover:bg-primary-50 transition-all duration-300"
        >
            <Icon name="mdi:email-newsletter" class="w-5 h-5" />
            <span>Substack newsletter</span>
            <Icon name="mdi:open-in-new" class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" />
        </a>
    </div>
</section>