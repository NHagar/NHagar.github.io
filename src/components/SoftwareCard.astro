---
import type { CollectionEntry } from "astro:content";
import { Icon } from "astro-icon/components";

interface Props {
    item: CollectionEntry<"software">["data"];
}

const { item } = Astro.props;
---

<div class="group relative">
    <!-- Card content -->
    <div
        class="bg-white rounded-lg border-academic shadow-card hover:shadow-lg transition-all duration-300 overflow-hidden"
    >
        <div class="p-6 flex flex-col h-full">
            <div class="flex-grow">
                <h3 class="text-xl font-semibold mb-2">
                    <a
                        href={item.link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 text-text-primary hover:text-primary-600 transition-colors duration-300 academic-heading"
                    >
                        <span class="relative">
                            {item.name}
                        </span>
                        <Icon
                            name="mdi:open-in-new"
                            class="w-4 h-4 text-text-secondary hover:text-primary-600 transition-colors duration-300"
                        />
                    </a>
                </h3>
                <p
                    class="text-sm text-text-secondary leading-relaxed academic-text"
                >
                    {item.description}
                </p>
            </div>

            <!-- Hover indicator -->
            <div
                class="mt-4 flex items-center gap-2 text-sm text-primary-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
            >
                <span>Explore project</span>
                <Icon name="mdi:arrow-right" class="w-4 h-4" />
            </div>
        </div>
    </div>
</div>
