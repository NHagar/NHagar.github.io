---
import type { CollectionEntry } from "astro:content";
import { Icon } from "astro-icon/components";

interface Props {
    mentions: CollectionEntry<"mentions">[];
}

const { mentions } = Astro.props;

const sortedMentions = mentions.sort((a, b) => {
    if (a.data.date && b.data.date) {
        return b.data.date.getTime() - a.data.date.getTime();
    }
    return 0;
});

function formatDate(date: Date): string {
    return new Intl.DateTimeFormat("en-US", {
        month: "long",
        year: "numeric",
        day: "numeric",
    }).format(date);
}

const venueLogos = {
    "Business Insider": "üè¢",
    "The New Yorker": "üì∞",
    "Nieman Lab": "üî¨",
    "The Science of Politics podcast": "üéôÔ∏è",
};
---

<section aria-labelledby="mentions-heading" class="animate-section">
    <div class="flex items-center justify-between mb-8">
        <h2 id="mentions-heading" class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-primary-600 to-accent-purple bg-clip-text text-transparent">
            Media Mentions & Appearances
        </h2>
        <div class="h-0.5 flex-1 ml-6 bg-gradient-to-r from-primary-200 to-transparent"></div>
    </div>
    
    {sortedMentions && sortedMentions.length > 0 ? (
        <div class="grid gap-6">
            {sortedMentions.map((mention, index) => (
                <article 
                    class="group relative overflow-hidden rounded-2xl bg-white border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300 hover-lift"
                    style={`animation-delay: ${0.1 * index}s;`}
                >
                    <!-- Gradient strip at top -->
                    <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-400 via-accent-purple to-accent-pink"></div>
                    
                    <div class="p-6">
                        <div class="flex items-start gap-4">
                            <div class="text-3xl">
                                {venueLogos[mention.data.venue] || "üìç"}
                            </div>
                            
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-text-primary mb-2 group-hover:text-primary-600 transition-colors duration-300">
                                    <a
                                        href={mention.data.link}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="inline-flex items-center gap-2"
                                    >
                                        {mention.data.title}
                                        <Icon name="mdi:open-in-new" class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-all duration-300" />
                                    </a>
                                </h3>
                                
                                <div class="flex items-center gap-3 text-sm text-text-secondary mb-2">
                                    <span class="font-medium text-primary-600">
                                        {mention.data.venue}
                                    </span>
                                    {mention.data.date && (
                                        <>
                                            <span class="text-primary-300">‚Ä¢</span>
                                            <time datetime={mention.data.date.toISOString()}>
                                                {formatDate(mention.data.date)}
                                            </time>
                                        </>
                                    )}
                                </div>
                                
                                {mention.data.work_mentioned_title && (
                                    <div class="mt-3 p-3 rounded-lg bg-gradient-to-r from-primary-50 to-accent-purple/10 border border-primary-100">
                                        <p class="text-xs font-medium text-primary-600 mb-1">Featured Work:</p>
                                        {mention.data.work_mentioned_link ? (
                                            <a
                                                href={mention.data.work_mentioned_link}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="text-sm text-text-primary hover:text-primary-600 italic transition-colors duration-300"
                                            >
                                                "{mention.data.work_mentioned_title}"
                                            </a>
                                        ) : (
                                            <span class="text-sm text-text-primary italic">
                                                "{mention.data.work_mentioned_title}"
                                            </span>
                                        )}
                                    </div>
                                )}
                            </div>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    ) : (
        <p class="text-text-secondary text-center py-8">
            No media mentions to display at the moment.
        </p>
    )}
    
    <div class="mt-8 p-6 rounded-2xl bg-gradient-to-r from-primary-50 to-accent-purple/10 text-center">
        <p class="text-text-secondary flex items-center justify-center gap-2">
            <Icon name="mdi:email" class="w-5 h-5 text-primary-600" />
            For media inquiries: <span class="font-medium text-primary-600">nhagar[at]northwestern.edu</span>
        </p>
    </div>
</section>