---
const researchFocusIntro = "My research centers on understanding the dynamics of collective attention in complex digital ecosystems. I employ computational methods, data science, and network analysis to investigate:";

const researchAreas = [
    {
        title: "AI in Journalism & Media",
        icon: "ü§ñ",
        description: "The application and impact of artificial intelligence, particularly generative AI, in newsrooms and the broader media landscape.",
    },
    {
        title: "Information Discovery & Virality",
        icon: "üìà",
        description: "How individuals and groups discover information online, why certain content becomes popular or viral.",
    },
    {
        title: "Platform Dynamics",
        icon: "üåê",
        description: "Analyzing large social platforms and attention markets to understand their structural effects.",
    },
    {
        title: "Computational Methods for Social Science",
