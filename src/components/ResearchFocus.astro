---
// src/components/ResearchFocus.astro
// This component highlights your research focus.
// You should describe the kind of research you do here.
// Consider making this section visually distinct.

const researchFocusIntro =
    "My research centers on understanding the dynamics of collective attention in complex digital ecosystems. I employ computational methods, data science, and network analysis to investigate:";
const researchAreas = [
    {
        title: "AI in Journalism & Media",
        description:
            "The application and impact of artificial intelligence, particularly generative AI, in newsrooms and the broader media landscape, including ethical considerations and workflow transformations.",
    },
    {
        title: "Information Discovery & Virality",
        description:
            "How individuals and groups discover information online, why certain content becomes popular or viral, and the mechanisms driving these trends across various platforms.",
    },
    {
        title: "Platform Dynamics",
        description:
            "Analyzing large social platforms (e.g., TikTok, Reddit, Facebook) and attention markets (e.g., Netflix, Substack) to understand their structural effects on content and consumption.",
    },
    {
        title: "Content Creator Influence",
        description:
            "The factors that influence content creators, their strategies for audience engagement, and their role in shaping online narratives and attention markets.",
    },
];
---

<section
    aria-labelledby="research-focus-heading"
    class="py-8 px-6 rounded-xl bg-light-accent/50 border border-border-color shadow-depth-sm"
    style="--tw-bg-opacity: 0.5;"
>
    <h2
        id="research-focus-heading"
        class="text-2xl sm:text-3xl font-bold text-text-primary mb-6 text-center md:text-left"
    >
        My Research Focus
    </h2>
    <p
        class="text-base sm:text-lg text-text-secondary leading-relaxed mb-8 text-center md:text-left"
    >
        {researchFocusIntro}
    </p>
    <div class="grid md:grid-cols-2 gap-6">
        {
            researchAreas.map((area) => (
                <div class="p-4 border border-border-color/50 rounded-lg bg-background shadow-sm">
                    <h3 class="text-lg font-semibold text-primary-accent mb-2">
                        {area.title}
                    </h3>
                    <p class="text-sm text-text-secondary leading-normal">
                        {area.description}
                    </p>
                </div>
            ))
        }
    </div>
</section>
