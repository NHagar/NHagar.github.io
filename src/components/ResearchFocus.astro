---

<section class="animate-section">
    <div class="relative overflow-hidden rounded-3xl p-8 md:p-12 shadow-depth-lg">

        
        <div class="relative">
            <h2 class="text-2xl sm:text-3xl font-bold mb-6 text-center md:text-left bg-gradient-to-r from-primary-600 to-accent-purple bg-clip-text text-transparent">
                My Research Focus
            </h2>
            <p class="text-base sm:text-lg text-text-secondary leading-relaxed mb-8 text-center md:text-left">
                {researchFocusIntro}
            </p>
            
            <div class="grid md:grid-cols-2 gap-6">
                {researchAreas.map((area, index) => (
                    <div 
                        class="group relative overflow-hidden rounded-xl bg-white/70 backdrop-blur-sm border border-white/50 shadow-sm hover:shadow-lg transition-all duration-300 hover-lift"
                        style={`animation-delay: ${0.1 * index}s;`}
                    >
                        <!-- Hover gradient -->
                        <div class="absolute inset-0 bg-gradient-to-br from-primary-50 to-accent-purple/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        
                        <div class="relative p-6">
                            <div class="flex items-start gap-3">
                                <span class="text-2xl">{area.icon}</span>
                                <div>
                                    <h3 class="text-lg font-semibold text-primary-600 mb-2">
                                        {area.title}
                                    </h3>
                                    <p class="text-sm text-text-secondary leading-normal">
                                        {area.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>