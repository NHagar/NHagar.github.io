---
// src/components/Header.astro
// Using Heroicons for this example. You can install with: npm install @iconify-json/heroicons
// Or use SVGs directly, or another icon library.
import { Icon } from "astro-icon/components"; // For using iconify collections

const socialLinks = [
    { name: "GitHub", href: "https://github.com/NHagar/", icon: "mdi:github" }, // mdi:github is from Material Design Icons
    {
        name: "LinkedIn",
        href: "https://www.linkedin.com/in/nicholashagar/",
        icon: "mdi:linkedin",
    },
    {
        name: "Medium",
        href: "https://medium.com/@nicholashagar",
        icon: "mdi:medium",
    },
    {
        name: "CV",
        href: "https://docs.google.com/document/d/10QOEsf53CFH_TFZpLgHHXcIzP5M69dMd/edit?usp=sharing&ouid=106222885453853342041&rtpof=true&sd=true",
        icon: "mdi:file-document-outline",
        label: "CV",
    }, // Using mdi:file-pdf-box might be better if it's always a PDF
];

const name = "Nick Hagar";
const tagline =
    "Postdoctoral Scholar @ Northwestern University | Generative AI in the Newsroom Initiative";
// A shorter alternative for the tagline if the above is too long for the header:
// const tagline = "Researching Collective Attention & AI in Journalism";
---

<header class="text-center md:text-left">
    <div class="md:flex md:items-center md:justify-between">
        <div>
            <h1
                class="text-4xl sm:text-5xl font-extrabold tracking-tight text-text-primary"
            >
                {name}
            </h1>
            <p class="mt-2 text-lg sm:text-xl text-text-secondary">
                {tagline}
            </p>
        </div>

        <div
            class="mt-6 md:mt-0 md:ml-6 flex justify-center md:justify-start space-x-5"
        >
            {
                socialLinks.map((link) => (
                    <a
                        href={link.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-text-secondary hover:text-primary-accent transition-colors duration-150"
                        aria-label={link.label || link.name}
                    >
                        <Icon name={link.icon} class="w-6 h-6 sm:w-7 sm:h-7" />
                    </a>
                ))
            }
        </div>
    </div>
</header>

<style>
    /* Add any component-specific styles here if needed, though Tailwind should cover most */
</style>
