---
import type { CollectionEntry } from "astro:content";
import SoftwareCard from "./SoftwareCard.astro";
import { Icon } from "astro-icon/components";

interface Props {
    softwareItems: CollectionEntry<"software">[];
}

const { softwareItems } = Astro.props;

// Optional: Add statistics or metrics
const totalProjects = softwareItems.length;
const languages = ["Python", "TypeScript", "JavaScript"]; // You could extract this from your data
---

<section id="software" aria-labelledby="software-heading" class="animate-section relative">    
    <div class="relative">
        <!-- Section header -->
        <div class="flex items-center justify-between mb-10">
            <div class="flex items-center gap-4">
                <h2 id="software-heading" class="text-2xl sm:text-3xl font-semibold text-text-primary academic-heading">
                    Software & Code
                </h2>
            </div>
        </div>

        {softwareItems && softwareItems.length > 0 ? (
            <>
                
                <!-- Software grid with hover effects -->
                <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
                    {softwareItems.map((itemEntry, index) => (
                        <div 
                            class="animate-scale-in" 
                            style={`animation-delay: ${0.1 * index}s;`}
                        >
                            <SoftwareCard item={itemEntry.data} />
                        </div>
                    ))}
                </div>
                
                <!-- GitHub CTA -->
                <div class="mt-12 text-center">
                    <a
                        href="https://github.com/NHagar"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-3 px-8 py-4 rounded-lg bg-primary-600 text-white font-medium shadow-card hover:bg-primary-700 transition-all duration-300"
                    >
                        <Icon name="mdi:github" class="w-6 h-6" />
                        <span>Explore all projects on GitHub</span>
                        <Icon name="mdi:arrow-right" class="w-5 h-5" />
                    </a>
                    
                    <!-- Additional context -->
                    <p class="mt-6 text-sm text-text-tertiary academic-text">
                        Open source contributions and experiments in 
                        <span class="font-medium text-primary-600">data science</span>, 
                        <span class="font-medium text-primary-600">web scraping</span>, and 
                        <span class="font-medium text-primary-600">journalism tools</span>
                    </p>
                </div>
            </>
        ) : (
            <div class="text-center py-12">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-50 border border-gray-200 mb-4">
                    <Icon name="mdi:code-off" class="w-8 h-8 text-text-secondary" />
                </div>
                <p class="text-text-secondary academic-text">
                    No software projects to display at the moment.
                </p>
                <p class="text-sm text-text-tertiary mt-2 academic-text">
                    New code coming soon!
                </p>
            </div>
        )}
    </div>
</section>